{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "./dist",
    "sourceMap": true,
    "inlineSources": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@controllers/*": ["./controllers/*"],
      "@lib/*": ["./lib/*"],
      "@middleware/*": ["./middleware/*"],
      "@models/*": ["./models/*"],
      "@models": ["./models/index"],
      "@routes/*": ["./routes/*"],
      "@services/*": ["./services/*"],
      "@types/*"        : ["./types/*"],
      "@utils/*": ["./utils/*"],
      "@shared/*": ["../../shared/types/*"]
    },
    "plugins": [
      { "transform": "typescript-transform-paths" },
      { "transform": "typescript-transform-paths", "afterDeclarations": true }
    ]
  },
  "include": ["./**/*.ts"],
  "exclude": ["dist", "coverage"]
}
